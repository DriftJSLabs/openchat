# ==============================================================================
# OpenChat Web Client - Environment Configuration
# ==============================================================================

# Application Configuration
NEXT_PUBLIC_APP_NAME=OpenChat
NEXT_PUBLIC_APP_VERSION=1.0.0
NODE_ENV=development

# Server Configuration
NEXT_PUBLIC_SERVER_URL=http://localhost:3000
NEXT_PUBLIC_WEB_URL=http://localhost:3001

# AI Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7
AI_MODEL=openai/gpt-4-turbo-preview

# Local Database Configuration (wa-sqlite)
NEXT_PUBLIC_DATABASE_NAME=openchat_local
NEXT_PUBLIC_ENABLE_LOCAL_SYNC=true

# ElectricSQL Configuration
NEXT_PUBLIC_ELECTRIC_URL=http://localhost:5133
ELECTRIC_TOKEN=your_electric_token_here

# Authentication Configuration
NEXT_PUBLIC_AUTH_URL=http://localhost:3000/api/auth

# Development Configuration
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_ENABLE_DEVTOOLS=true
# Enable development-only features like dev-login button
NEXT_PUBLIC_DEV_MODE=true
# Enable development authentication features in the UI
NEXT_PUBLIC_ENABLE_DEV_AUTH=true

# Performance Configuration
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_PERFORMANCE_SAMPLE_RATE=0.1

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_EXPERIMENTAL_FEATURES=false