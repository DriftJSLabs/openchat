{
  "name": "openchat-server",
  "main": "src/index.ts",
  "types": "src/types/index.ts",
  "type": "module",
  "scripts": {
    "build": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "check-types": "tsc -b",
    "dev": "bun --hot src/dev.ts",
    "start": "bun src/index.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "bun src/db/seeds/index.ts",
    "db:seed:dev": "bun src/db/seeds/index.ts --env development --reset",
    "db:seed:test": "bun src/db/seeds/index.ts --env test --reset",
    "db:seed:demo": "bun src/db/seeds/index.ts --env demo --reset",
    "db:reset": "bun src/db/seeds/index.ts --env development --reset && drizzle-kit push",
    "clean": "rm -rf dist node_modules/.cache",
    "lint": "oxlint .",
    "lint:fix": "oxlint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "security:audit": "bun audit"
  },
  "dependencies": {
    "@ai-sdk/google": "^2.0.3",
    "@orpc/client": "^1.5.0",
    "@orpc/server": "^1.5.0",
    "ai": "^5.0.9",
    "better-auth": "^1.3.4",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "hono": "^4.8.2",
    "nanoid": "^5.1.5",
    "postgres": "^3.4.7",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/node": "^22.13.11",
    "tsdown": "^0.12.9",
    "typescript": "^5.8.2"
  }
}
